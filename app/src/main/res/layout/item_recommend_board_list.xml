<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewRB"
    android:layout_width="130dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#F2F2F2"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="15dp">
    <TextView
        android:id="@+id/recommend_board_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="8dp"
        android:layout_marginTop="115dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/one_mobile_light"/>
    <TextView
        android:id="@+id/recommend_board_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="타이틀"
        android:layout_marginStart="5dp"
        android:layout_marginTop="128dp"
        android:textSize="12dp"
        android:fontFamily="@font/one_mobile_regular"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/recommend_board_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="타이틀"
        android:layout_marginStart="5dp"
        android:layout_marginTop="128dp"
        android:textSize="12dp"
        android:visibility="gone"
        android:fontFamily="@font/one_mobile_regular"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/recommend_board_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="아이디"
        android:layout_marginTop="154dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/one_mobile_regular"/>
    <ImageView
        android:id="@+id/recommend_board_image"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"/>
    <TextView
        android:id="@+id/recommend_board_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="2022-11-10"
        android:textSize="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="165dp"
        android:textAlignment="textEnd"
        android:fontFamily="@font/one_mobile_light"/>

</androidx.cardview.widget.CardView>