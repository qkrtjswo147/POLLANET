<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ranking_card_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/ranking_cardView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="92dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#FF94B8"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/my_Ranking_profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:civ_border_color="#000000"
                    app:civ_border_width="1dp"
                    android:backgroundTint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/one_mobile_regular"
                    android:text="나의 순위"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/my_Ranking_score"
                    android:layout_width="93dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="122dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/one_mobile_bold"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="28dp" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ranking_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/one_mobile_title"
                android:text="Pollanet Ranking"
                android:textSize="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_cardView" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ranking_top_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="128dp"
                android:layout_marginTop="60dp"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                app:civ_border_color="#FFCF41"
                app:civ_border_width="4dp"
                app:layout_constraintStart_toStartOf="@+id/ranking_title_text"
                app:layout_constraintTop_toBottomOf="@+id/ranking_title_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="196dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/one_mobile_title"
                android:text="1"
                android:textSize="28dp"
                android:textColor="#FFCF41"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_title_text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/one_mobile_bold"
                android:textColor="#A3A3A3"
                android:text="2"
                android:textSize="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_title_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/one_mobile_bold"
                android:text="3"
                android:textSize="26dp"
                android:textColor="#CD7F32"
                android:layout_marginTop="72dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_top_image"
                app:layout_constraintTop_toBottomOf="@+id/ranking_title_text" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ranking_second_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/sample2"
                app:civ_border_color="#A3A3A3"
                app:civ_border_width="2.5dp"
                app:layout_constraintEnd_toStartOf="@+id/ranking_top_image"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/ranking_title_text"
                app:layout_constraintTop_toBottomOf="@+id/ranking_title_text" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ranking_third_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/sample2"
                app:civ_border_color="#CD7F32"
                app:civ_border_width="2.5dp"
                app:layout_constraintStart_toEndOf="@+id/ranking_top_image"
                app:layout_constraintTop_toBottomOf="@+id/ranking_title_text" />

            <TextView
                android:id="@+id/ranking_top_nickname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/one_mobile_bold"
                android:text="1등"
                android:textAlignment="center"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="@+id/ranking_top_image"
                app:layout_constraintTop_toBottomOf="@+id/ranking_top_image" />

            <TextView
                android:id="@+id/ranking_top_point"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/one_mobile_regular"
                android:textStyle="bold"
                android:text="9920"
                android:textAlignment="center"
                android:textSize="18dp"

                app:layout_constraintStart_toStartOf="@+id/ranking_top_nickname"
                app:layout_constraintTop_toBottomOf="@+id/ranking_top_nickname" />

            <TextView
                android:id="@+id/ranking_third_nickname"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/one_mobile_regular"
                android:textStyle="bold"
                android:text="3등"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_third_image" />

            <TextView
                android:id="@+id/ranking_second_nickname"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/one_mobile_regular"
                android:textStyle="bold"
                android:text="2등"
                android:textAlignment="center"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_second_image" />

            <TextView
                android:id="@+id/ranking_third_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/one_mobile_regular"
                android:textStyle="bold"
                android:text="7014"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/ranking_third_nickname"
                app:layout_constraintTop_toBottomOf="@+id/ranking_third_nickname" />

            <TextView
                android:id="@+id/ranking_second_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36.5dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/one_mobile_regular"
                android:textStyle="bold"
                android:text="8346"
                android:textAlignment="center"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/ranking_second_nickname"
                app:layout_constraintTop_toBottomOf="@+id/ranking_second_nickname" />

            <RelativeLayout
                android:id="@+id/ranking_list"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="50dp"
                android:background="#F3F3F3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_top_point"
                android:paddingTop="5sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ranking_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>